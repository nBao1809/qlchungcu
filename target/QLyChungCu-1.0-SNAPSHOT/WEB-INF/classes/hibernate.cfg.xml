<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.connection.driver_class">com.mysql.cj.jdbc.Driver</property>
        <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/managebuildingsdb?useSSL=false</property>
        <property name="hibernate.connection.username">root</property>
        <property name="hibernate.connection.password">1234</property>
        <property name="hibernate.dialect">org.hibernate.dialect.MySQL8Dialect</property>
        <property name="hibernate.connection.pool_size">5</property>
        <property name="show_sql">true</property>
        <property name="format_sql">true</property>
        <mapping class="com.mycompany.pojo.User"/>
        <mapping class="com.mycompany.pojo.Bill"/>
        <mapping class="com.mycompany.pojo.LockerItem"/>
        <mapping class="com.mycompany.pojo.Complaint"/>
        <mapping class="com.mycompany.pojo.Relative"/>
        <mapping class="com.mycompany.pojo.Vehicle"/>
        <mapping class="com.mycompany.pojo.Apartment"/>
        <mapping class="com.mycompany.pojo.Notification"/>
        <mapping class="com.mycompany.pojo.ResidentApartment"/>
        <mapping class="com.mycompany.pojo.Survey"/>
        <mapping class="com.mycompany.pojo.SurveyResponse"/>
        <mapping class="com.mycompany.pojo.BillDetail"/>
        <mapping class="com.mycompany.pojo.FeeType"/>
        <mapping class="com.mycompany.pojo.PaymentTransaction"/>
        <mapping class="com.mycompany.pojo.SurveyQuestion"/>
        <mapping class="com.mycompany.pojo.ResponseDetail"/>
        <mapping class="com.mycompany.pojo.QuestionOption"/>

    </session-factory>
</hibernate-configuration>

